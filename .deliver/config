APP="wwelo"

BUILD_HOST="wwelo.com"
BUILD_USER="mcgavin"
BUILD_AT="/home/mcgavin/app_build"

PRODUCTION_HOSTS="wwelo.com" 
PRODUCTION_USER="mcgavin" 
DELIVER_TO="/home/mcgavin/app_release" 

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/mcgavin/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}

pre_erlang_clean_compile() {
  status "Running phx.digest" # log output prepended with "----->"
  __sync_remote " # runs the commands on the build host
    # [ -f ~/.profile ] && source ~/.profile # load profile (optional)
    source ~/.profile
    # echo \$PATH # check if rbenv is in the path
    set -e # fail if any command fails (recommended)
    cd '$BUILD_AT' # enter the build directory on the build host (required)

    # prepare something
    mkdir -p priv/static # required by the phx.digest task

    echo react-phoenix deps
    cd deps/react_phoenix && npm i && cd ../..
    echo node deps
    cd assets && npm install && npm run deploy && cd ..

    # run your custom task
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phx.digest $SILENCE

    mix ecto.migrate
    mix compile
    mix populate_database
  "
}